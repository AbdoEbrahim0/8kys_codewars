using namespace std;
bool is_even(double n)
{
  // it fail in fixed  test if i used int x=floor(n)
    long  x=floor(n);  // it fail in random tes if using  long x=n 
 if(n>x) return false;
  (x>=0)? x:x=-1*x;
  
  (x>=0)? x:-x;
  return  (x%2==0)? true :false;
}
