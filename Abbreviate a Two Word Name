std::string abbrevName(std::string name)
{
  char firstName=toupper(name[0]) ;
  char lastName;
  string res="";
  res+=firstName;
  res+=".";
  for (int i=0;i<name.size();i++)
  {
    if (name[i]==' ')
    {
    res+=toupper(name[i+1]);
    break;
    }
  }
  return res ;
}
int main() {
cout<<abbrevName("abdo magdy")<<"\n";

